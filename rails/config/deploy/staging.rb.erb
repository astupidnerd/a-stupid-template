
set :rbenv_type, :user
set :rbenv_ruby, "<%= ruby_version %>"

set :puma_threads, [4, 16]

set :deploy_to, "/home/<%= deploy_user %>/apps/<%= app_name %>"

set :stage, :staging
set :rails_env, :staging
set :branch, "staging"

server "<%= staging_server %>", user: "<%= deploy_user %>", roles: %w{app db web staging}
